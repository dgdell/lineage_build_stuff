Subject: [PATCH 1/2] update_verifier: skip verity to determine successful on
 lineage builds

Change-Id: I27a89df652febb312971a9afdb4dc37f8adb0b2e
---
 update_verifier/Android.mk | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/update_verifier/Android.mk b/update_verifier/Android.mk
index 0ff88546..0a195f74 100644
--- a/update_verifier/Android.mk
+++ b/update_verifier/Android.mk
@@ -39,9 +39,11 @@ LOCAL_EXPORT_C_INCLUDE_DIRS := \
 LOCAL_C_INCLUDES := \
     $(LOCAL_PATH)/include
 
+ifeq ($(LINEAGE_BUILD),)
 ifeq ($(PRODUCTS.$(INTERNAL_PRODUCT).PRODUCT_SUPPORTS_VERITY),true)
 LOCAL_CFLAGS += -DPRODUCT_SUPPORTS_VERITY=1
 endif
+endif
 
 ifeq ($(BOARD_AVB_ENABLE),true)
 LOCAL_CFLAGS += -DBOARD_AVB_ENABLE=1
