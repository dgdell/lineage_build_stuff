Subject: [PATCH 2/2] openssh: don't spam warnings as errors

Change-Id: I88dbf17aa4401f2babc20806f1ac8a9f8ff1b842
---
 Android.mk | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/Android.mk b/Android.mk
index 2d104b7b..f264ebee 100644
--- a/Android.mk
+++ b/Android.mk
@@ -136,6 +136,8 @@ ifneq (,$(SSHDIR))
 LOCAL_CFLAGS += -DSSHDIR=\"$(SSHDIR)\"
 endif
 
+LOCAL_CFLAGS += -Wno-sign-compare -Wno-error
+
 include $(BUILD_SHARED_LIBRARY)
 
 ###################### ssh ######################
@@ -156,7 +158,7 @@ LOCAL_SRC_FILES := \
 
 LOCAL_MODULE := ssh
 
-LOCAL_CFLAGS += -Wno-unused-parameter -Wno-macro-redefined
+LOCAL_CFLAGS += -Wno-unused-parameter -Wno-macro-redefined -Wno-error
 
 LOCAL_C_INCLUDES := \
     external/zlib \
@@ -263,7 +265,7 @@ LOCAL_SRC_FILES := \
 
 LOCAL_MODULE := sshd
 
-LOCAL_CFLAGS += -Wno-unused-parameter -Wno-macro-redefined
+LOCAL_CFLAGS += -Wno-error -Wno-unused-parameter -Wno-macro-redefined
 
 LOCAL_C_INCLUDES := \
     external/zlib \
