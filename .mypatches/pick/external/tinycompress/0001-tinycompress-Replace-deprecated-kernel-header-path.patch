From: Brandon McAnsh <brandon.mcansh@gmail.com>
Date: Mon, 14 May 2018 17:33:42 -0400
Subject: [PATCH] tinycompress: Replace deprecated kernel header path

Change-Id: I9ba9a93659d4654e73a3c2e7455e8c627ae1af55
Signed-off-by: Brandon McAnsh <brandon.mcansh@gmail.com>
---
 Android.mk | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/Android.mk b/Android.mk
index fa3ccad..0a8ad7c 100644
--- a/Android.mk
+++ b/Android.mk
@@ -8,8 +8,8 @@ LOCAL_PATH := $(call my-dir)
 include $(CLEAR_VARS)
 LOCAL_CFLAGS := -Wno-macro-redefined
 LOCAL_C_INCLUDES:= $(LOCAL_PATH)/include
-LOCAL_C_INCLUDES += $(TARGET_OUT_INTERMEDIATES)/KERNEL_OBJ/usr/include
-LOCAL_ADDITIONAL_DEPENDENCIES += $(TARGET_OUT_INTERMEDIATES)/KERNEL_OBJ/usr
+LOCAL_C_INCLUDES += INSTALLED_KERNEL_HEADERS/include
+LOCAL_ADDITIONAL_DEPENDENCIES += INSTALLED_KERNEL_HEADERS
 LOCAL_CFLAGS += -DUSE_VENDOR_EXTN
 LOCAL_SRC_FILES:= compress.c utils.c
 LOCAL_MODULE := libtinycompress_vendor
@@ -21,8 +21,8 @@ include $(BUILD_SHARED_LIBRARY)
 include $(CLEAR_VARS)
 LOCAL_CFLAGS := -Wno-macro-redefined
 LOCAL_C_INCLUDES:= $(LOCAL_PATH)/include
-LOCAL_C_INCLUDES += $(TARGET_OUT_INTERMEDIATES)/KERNEL_OBJ/usr/include
-LOCAL_ADDITIONAL_DEPENDENCIES += $(TARGET_OUT_INTERMEDIATES)/KERNEL_OBJ/usr
+LOCAL_C_INCLUDES += INSTALLED_KERNEL_HEADERS/include
+LOCAL_ADDITIONAL_DEPENDENCIES += INSTALLED_KERNEL_HEADERS
 LOCAL_SRC_FILES:= compress.c utils.c
 LOCAL_MODULE := libtinycompress
 LOCAL_SHARED_LIBRARIES:= libcutils libutils
