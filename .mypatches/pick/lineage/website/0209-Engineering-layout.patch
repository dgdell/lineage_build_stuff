diff --git a/engineering.html b/engineering.html
new file mode 100644
index 0000000..710a06d
--- /dev/null
+++ b/engineering.html
@@ -0,0 +1,35 @@
+---
+layout: default
+---
+<style>
+body {
+  background-color: #fafafa;
+}
+</style>
+
+<div class="jumbotron welcome">
+  <div class="container">
+
+    <h1>LineageOS Engineering Blog</h1>
+    <p>Technical blog posts on Android internals.</p>
+    <a class="btn btn-white" href="{{ site.baseurl }}/feed-engineering.xml"><i class="material-icons">rss_feed</i>RSS Feed</a>
+  </div>
+</div>
+
+<div class="container post">
+  {% for post in site.categories.engineering %}
+  <div class="card">
+
+    <div class="card-body">
+      <h6>{{ post.excerpt }}</h6>
+      <h2 class="card-title"><a href="{{ site.baseurl }}{{ post.url }}">{{ post.title }}</a></h2>
+      <p class="card-text"><i class="far fa-clock fa-fw" aria-hidden="true"></i> {{ post.date | date: '%B %d, %Y' }}{% if post.author %} <i class="far fa-user fa-fw" aria-hidden="true"></i> {{ post.author }}{% endif %}</p>
+    </div>
+
+    <div class="card-button">
+      <a href="{{ site.baseurl }}{{ post.url }}" class="btn btn-primary btn-link">Read More</a>
+    </div>
+
+  </div>
+  {% endfor %}
+</div>
diff --git a/feed-engineering.xml b/feed-engineering.xml
new file mode 100644
index 0000000..613a7e5
--- /dev/null
+++ b/feed-engineering.xml
@@ -0,0 +1,20 @@
+---
+layout: null
+---
+<?xml version="1.0" encoding="utf-8"?>
+<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
+  <channel>
+    <title>LineageOS Engineering Blog</title>
+    <description>Technical blog posts on Android internals</description>
+    <link>{{ site.url }}</link>
+    {% for post in site.categories.engineering %}
+        <item>
+            <title>{{ post.title | xml_escape }}</title>
+            <description> {{ post.excerpt  | xml_escape }}</description>
+            <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
+            <link>{{ post.url | prepend: site.url }}</link>
+            <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
+        </item>
+    {% endfor %}
+  </channel>
+</rss>
